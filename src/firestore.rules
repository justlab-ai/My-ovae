
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users can only read/write their own profile and its subcollections
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Public profiles are readable by any signed-in user, but only writable by the owner
    match /publicUserProfiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    // Community posts are readable by anyone, but only the owner can modify them
    match /communityPosts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // This rule enables collectionGroup queries for a user's own logs.
    // It checks the 'userId' field on the document itself. This is critical for security.
    match /{path=**}/logs/{logId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
